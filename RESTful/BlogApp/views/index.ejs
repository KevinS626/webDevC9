<% include ./partials/header %>
<div class="ui main text container">
    <div class="ui hude header">RESTful Blog App</div>
    <div class="ui top attached segment">
        <div class="ui divided item">
            <% blogs.forEach(function(blog){ %>
                <div class="item">
                    <div class="ui small image">
                        <img src="<%= blog.image %>">
                    </div>
                    <div class="content">
                        <a class="ui header" href="/blogs/<%=blog._id%>"><%=blog.title%></a>
                        <div class="ui meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>
                        <div class="ui description">
                            <p><%- blog.body.substring(0, 200) %>...</p>
                        </div>
                        <div class="ui extra">
                            <a class="ui floated basic blue button" href="/blogs/<%=blog._id%>">
                                READ MORE<i class="right chevron icon"></i>
                            </a>
                        </div>
                    </div>
                </div>
            <% }) %> 
        </div>
    </div>
</div>

<% include ./partials/footer %>